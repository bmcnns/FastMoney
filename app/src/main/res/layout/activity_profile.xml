<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:background="@color/color4"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="0.35"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:cardBackgroundColor="@color/color9"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:fontFamily="sans-serif-black"
                        android:paddingLeft="20dp"
                        android:paddingTop="10dp"
                        android:paddingRight="30dp"
                        android:paddingBottom="10dp"
                        android:text="Profile"
                        android:textAllCaps="true"
                        android:textColor="@color/color3"
                        tools:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:layout_weight="0.30"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/defaultuserimage"></ImageView>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.7"
                            android:background="@color/color2"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <TextView
                                android:id="@+id/profile_fullName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:text="John Doe"
                                android:textSize="24sp"
                                android:visibility="gone"></TextView>

                            <LinearLayout
                                android:id="@+id/profile_editNameContainer"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profile_firstNameInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:clickable="false"
                                    android:fontFamily="sans-serif"
                                    android:text="John"
                                    android:textSize="14sp"></com.google.android.material.textfield.TextInputEditText>

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/profile_lastNameInput"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:clickable="false"
                                    android:fontFamily="sans-serif"
                                    android:text="Doe"
                                    android:textSize="14sp"></com.google.android.material.textfield.TextInputEditText>
                            </LinearLayout>

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/profile_emailInput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:fontFamily="sans-serif"
                                android:text="john.doe@example.com"
                                android:textSize="14sp"></com.google.android.material.textfield.TextInputEditText>

                            <TextView
                                android:id="@+id/profile_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:clickable="false"
                                android:fontFamily="sans-serif"
                                android:text="Halifax, Nova Scotia, Canada"
                                android:textSize="14sp"></TextView>

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/profile_editButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:padding="5dp"
                                android:text="Edit"
                                android:textSize="12sp"
                                android:visibility="gone"
                                app:backgroundTint="@color/color5" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/profile_cancelButton"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:padding="5dp"
                                android:text="Edit"
                                android:textSize="12sp"
                                app:backgroundTint="@color/color5" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                app:cardBackgroundColor="@color/color2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/color9">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-black"
                            android:paddingLeft="20dp"
                            android:paddingTop="10dp"
                            android:paddingRight="30dp"
                            android:paddingBottom="10dp"
                            android:text="REVIEWS"
                            android:textAllCaps="true"
                            android:textColor="@color/color3"
                            tools:textSize="24dp" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Employer Rating"
                        android:textSize="16sp"></TextView>

                    <LinearLayout
                        android:id="@+id/profile_employerRating"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="70dp"
                        android:layout_marginBottom="2dp"
                        android:clickable="false"
                        android:orientation="horizontal"
                        android:padding="1dp"
                        app:layout_constraintTop_toBottomOf="@+id/ratingTitle">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            app:srcCompat="@android:drawable/btn_star_big_off" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            app:srcCompat="@android:drawable/btn_star_big_off" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            app:srcCompat="@android:drawable/btn_star_big_off" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            app:srcCompat="@android:drawable/btn_star_big_off" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            app:srcCompat="@android:drawable/btn_star_big_off" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginVertical="4dp"
                        android:fontFamily="sans-serif-black"
                        android:text="Employer Rating"
                        android:textSize="16sp"></TextView>

                    <LinearLayout
                        android:id="@+id/profile_employeeRating"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:layout_marginHorizontal="70dp"
                        android:layout_marginBottom="5dp"
                        android:clickable="false"
                        android:orientation="horizontal"
                        android:padding="1dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/ratingTitle">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            app:srcCompat="@android:drawable/btn_star_big_off" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            app:srcCompat="@android:drawable/btn_star_big_off" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            app:srcCompat="@android:drawable/btn_star_big_off" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            app:srcCompat="@android:drawable/btn_star_big_off" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:clickable="true"
                            app:srcCompat="@android:drawable/btn_star_big_off" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color2">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="0.3"
                    android:orientation="vertical"
                    android:paddingHorizontal="30dp">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="workHistoryRedirect"
                        android:paddingVertical="10dp"
                        android:text="Employment History"
                        app:backgroundTint="@color/theme4" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:onClick="signOut"
                        android:paddingVertical="10dp"
                        android:text="Sign Out"
                        app:backgroundTint="@color/color5" />


                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:clickable="false"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Work"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1666666"
            android:background="@color/theme4"
            android:clickable="true"
            android:onClick="redirectToWorkPage">

            <TextView
                android:id="@+id/workIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontello"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/icon_briefcase"
                android:textColor="@color/color2"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Work"
                android:textAllCaps="true"
                android:textColor="@color/color2"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/workIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Hire"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.166666"
            android:background="@color/theme0"
            android:clickable="true"
            android:onClick="redirectToHirePage">

            <TextView
                android:id="@+id/hireIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontello"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/icon_handshake"
                android:textColor="@color/color3"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Hire"
                android:textAllCaps="true"
                android:textColor="@color/color3"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hireIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/addJob"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1666666"
            android:background="@color/theme0"
            android:clickable="true"
            android:onClick="redirectToPostJobPage">

            <TextView
                android:id="@+id/addJobIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontello"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/icon_plusSign"
                android:textColor="@color/color3"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="POST JOB"
                android:textAllCaps="true"
                android:textColor="@color/color3"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addJobIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/findJob"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1666666"
            android:background="@color/theme0"
            android:clickable="true"
            android:onClick="redirectToFindJobPage">

            <TextView
                android:id="@+id/findJobIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontello"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/icon_plusSign"
                android:textColor="@color/color3"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="FIND JOB"
                android:textAllCaps="true"
                android:textColor="@color/color3"
                android:textColorHighlight="#FFFFFF"
                android:textColorHint="#FFFFFF"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/findJobIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.16666666"
            android:background="@color/theme0"
            android:clickable="true"
            android:onClick="redirectToProfilePage">

            <TextView
                android:id="@+id/profileIcon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/fontello"
                android:gravity="center|center_horizontal|center_vertical"
                android:text="@string/icon_chatBubble"
                android:textColor="@color/color3"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/Profile"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-black"
                android:gravity="center_horizontal"
                android:text="Profile"
                android:textAllCaps="true"
                android:textColor="@color/color3"
                android:textSize="9sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileIcon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</LinearLayout>
